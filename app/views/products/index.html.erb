<h1><%= t ".title" %></h1>

<%= link_to "New product", new_product_path if authenticated? %>
<%= link_to "Login", new_session_path unless authenticated? %>

<div id="products">
  <style>
    /* Bố cục bảng sản phẩm */
    #products table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 2rem;
    }

    #products th, #products td {
      text-align: left;
      padding: 10px;
      border: 1px solid #ddd;
    }

    #products th {
      background-color: #f4f4f4;
      font-weight: bold;
    }

    /* Kiểu dáng cho liên kết sản phẩm */
    #products td a {
      color: #007bff;
      text-decoration: none;
    }

    #products td a:hover {
      text-decoration: underline;
    }

    /* Kiểu dáng cho hình ảnh sản phẩm */
    #products img {
      border-radius: 8px;
      object-fit: cover; /* Đảm bảo hình ảnh không bị biến dạng */
    }
  </style>

  <table>
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Image</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= link_to product.name, product %></td>
          <td>
            <% if product.featured_image.attached? %>
              <%= image_tag product.featured_image, width: 100, height: 100, alt: product.name %>
            <% else %>
              No image available
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
